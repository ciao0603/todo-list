<ul class="list-group">
  {{#each todos}}
  <li class="list-group-item">
    <div class="row">
      <div class="col-auto me-auto">
        <input type="checkbox"
          name="done"
          {{#if
          this.done
          }}
          checked
          {{/if}}
          disabled>
        <h4 style="display: inline">
          {{this.name}}
        </h4>
      </div>
      <div class="col-auto">
        <a class="btn btn-secondary"
          href="./todos/{{this._id}}">Detail</a>
        <a class="btn btn-success"
          href="./todos/{{this._id}}/edit">Edit</a>
        <form action="./todos/{{this._id}}?_method=DELETE"
          method="POST"
          style="display: inline">
          <button class="btn btn-danger"
            type="submit">Delete</button>
        </form>
      </div>
    </div>
  </li>
  {{/each}}
</ul>
